@{
    ViewData["Title"] = Localizer["FreeCoins"];
    ViewData["Description"] = Localizer["CoinsDescription"];
}

<div class="div-border mt-3 mb-3 rounded-top">
    <div class="div-text">
        <h1 class="my-title text-center text-uppercase font-weight-bold">@Localizer["FreeCoins"]</h1>
        <div class="row div-text">
            <div class="col-md-8">
                @Html.Raw(Localizer["CoinsText"])
            </div>
            <div class="col-md-4">
                <img src="~/images/payments/package-starterpack.png" alt="@Localizer["FreeCoins"]" class="img-fluid mx-auto d-block" />
            </div>
        </div>
    </div>

</div>